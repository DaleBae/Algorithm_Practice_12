import java.util.Scanner;

public class three546A {
	public static void main(String args[]) {
		Scanner sc = new Scanner(System.in);
		int k = sc.nextInt();
		int n = sc.nextInt();
		int w = sc.nextInt();
		int tot = 0;
		
		for(int i=1; i<=w; i++) {
			tot += k*i;
		}
		
		System.out.println(tot-n>0?tot-n:"0");
	}
}
