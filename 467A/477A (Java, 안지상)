import java.util.Scanner;

public class four467A {
	public static void main(String args[]) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int p=0, q=0, count=0;
		
		for(int i=0; i<n; i++) {
			p = sc.nextInt();
			q = sc.nextInt();
			if(p<=q-2)
				count++;
		}
		System.out.println(count);
	}
}
