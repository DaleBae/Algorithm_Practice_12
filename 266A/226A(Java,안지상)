import java.util.Scanner;

public class Three266A {
	public static void main(String args[]) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		int sum = 0;
		String rgb = sc.next();
		
		for(int i=1; i<n; i++) {
			if(rgb.charAt(i)==rgb.charAt(i-1))
				sum++;
		}
		System.out.println(sum);
		
	}	
}
